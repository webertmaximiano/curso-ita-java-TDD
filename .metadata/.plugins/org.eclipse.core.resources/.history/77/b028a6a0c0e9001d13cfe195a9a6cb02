import static org.junit.Assert.*;
import java.util.Arrays;
import java.util.List;

import org.junit.Test;

public class TesteCamelCase {
    
    private List<String> palavras;

    @Test
    public void converterNome() {
        palavras = Arrays.asList("webert");
        String palavraConvertida = ConversorDePalavras.converterCamelCase(palavras);
        assertEquals("webert", palavraConvertida);
    }
    
    @Test
    public void converterNomePrimeiraLetraMaiuscula() {
        palavras = Arrays.asList("Webert");
        String palavraConvertida = ConversorDePalavras.converterCamelCase(palavras);
        assertEquals("webert", palavraConvertida);
    }
}