
public class Pilha {
	
	private Object[] elementos;
	private int quantidade=0;

	public Pilha(int maximo) {
		elementos = new Object[maximo];
	}

	public boolean estaVazia() {
		
		return (quantidade == 0);
	}

	public int tamanho() {
		
		return quantidade;
	}

	public void empilha(Object elemento) {
		if (quantidade == elementos.length)//verifica se a quantidade é igual ao tamanho do elemento usando o metodo length
		this.elementos[quantidade] = elemento;// coloca o elemento recebido na posição quantidade
		quantidade++;
	}

	public Object topo() {
		
		return elementos[quantidade - 1];
	}

	public Object desempilha() {
		if(estaVazia())
			throw new PilhaVaziaException("Não é Possível Desempilhar");
		Object topo = topo();
		quantidade--;
		return topo;
	}

}
